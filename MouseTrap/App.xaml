<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="MouseTrap.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MouseTrap">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
                <ResourceDictionary>
                    <Style x:Key="xBaseTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                        <Setter Property="LineHeight" Value="19.5" />
                        <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
                    </Style>
                    <Style x:Key="xBodyTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlockStyle}">
                        <Setter Property="LineHeight" Value="19.5" />
                        <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <ThemeShadow x:Name="SharedShadow" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
